                            <path opacity="0.3" d="M6.7 19.4L5.3 18C4.9 17.6 4.9 17 5.3 16.6L16.6 5.3C17 4.9 17.6 4.9 18 5.3L19.4 6.7C19.8 7.1 19.8 7.7 19.4 8.1L8.1 19.4C7.8 19.8 7.1 19.8 6.7 19.4Z" fill="currentColor" />
                            <path d="M19.5 18L18.1 19.4C17.7 19.8 17.1 19.8 16.7 19.4L5.40001 8.1C5.00001 7.7 5.00001 7.1 5.40001 6.7L6.80001 5.3C7.20001 4.9 7.80001 4.9 8.20001 5.3L19.5 16.6C19.9 16.9 19.9 17.6 19.5 18Z" fill="currentColor" />
                        </svg>
                    </span>
                </div>
            </div>
            <form action="" class="form" id="formId">
                <div class="modal-body input">
                    <div class="form-group">
                        <label for="">Departement code</label>
                        <input type="text" class="form-control mt-3" name="DEPT_CODE" placeholder="DEPT_CODE">
                    </div>
                    <div class="form-group mt-5">
                        <label for="">Departement name</label>
                        <input type="text" class="form-control mt-3" name="DEPT_NAME" placeholder="DEPT_NAME">
                    </div>

                </div>
                <div class="modal-body hapus h5">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" id="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- end modal -->
<script>
    function createdept() {
        $('#modalDepartment').modal({
            backdrop: 'static',
            keyboard: false
        });
        $('.modal-title').html('Create New Departement');

        $('[name="DEPT_CODE"]').attr("required", "required");
        $('[name="DEPT_NAME"]').attr("required", "required");

        $('.modal-dialog').addClass('modal-sm');
        $('.modal-dialog').removeClass('modal-sm');
        $('#submit').html('Save');
        $('.hapus').addClass('d-none');
        $('.input').removeClass('d-none');
        $('#formId').attr('action', '/Departements/CreateDept');
    }
    function updatedept(DEPT_CODE, DEPT_NAME) {
        $('#modalDepartment').modal({
            backdrop: 'static',
            keyboard: false
        });
        $('.modal-title').html('Update Departement');

        $('[name="DEPT_CODE"]').val(DEPT_CODE);
        $('[name="DEPT_NAME"]').val(DEPT_NAME);

        $('[name="DEPT_CODE"]').attr("readonly", "readonly");
        $('[name="DEPT_CODE"]').attr("required", "required");
        $('[name="DEPT_NAME"]').attr("required", "required");

        $('.modal-dialog').addClass('modal-sm');
        $('.modal-dialog').removeClass('modal-sm');
        $('#submit').html('Update');
        $('.hapus').addClass('d-none');
        $('.input').removeClass('d-none');
        $('#formId').attr('action', '/Departements/UpdateDept');
    }
    function deletedept(DEPT_CODE, DEPT_NAME) {
        $('#modalDepartment').modal({
            backdrop: 'static',
            keyboard: false
        });
        $('.modal-title').html('Delete Departement');

        $('[name="DEPT_CODE"]').val(DEPT_CODE);
        $('[name="DEPT_NAME"]').val(DEPT_NAME);
        $('.hapus').html("Are you sure you want to delete departement <b>" + DEPT_NAME + "</b>?");

        $('.modal-dialog').removeClass('modal-lg');
        $('.modal-dialog').addClass('modal-lg');
        $('#submit').html('Delete');
        $('.input').addClass('d-none');
        $('.hapus').removeClass('d-none');

        $('#formId').attr('action', '/Departements/DeleteDept');
        $('#submit').removeClass('d-none');

        //hilangkan required
        $('[name="DEPT_CODE"]').removeAttr("required");
        $('[name="DEPT_NAME"]').removeAttr("required");
    }
</script>
