<script>
    $(document).ready(function () {

        var min_date = $("#FromDate").val();
        var t = $("#ReportPayement").DataTable({
            searching: true,
            processing: false,
            scrollY: 670,
            scrollX: true,
            autoWidth: false,
            scrollCollapse: false,
            paging: false,
            dom: 'Bfrtip',
            buttons: [{
                extend: 'excelHtml5',
                customize: function (xlsx) {
                    var sheet = xlsx.xl.worksheets['sheet1.xml'];
                    $('row', sheet).each(function (x) {
                        if ($('c[r=G' + x + '] t', sheet).text() === 'ABS') {
                            $('row:nth-child(' + x + ') c', sheet).attr('s', '19');
                        }
                        else if ($('c[r=G' + x + '] t', sheet).text() === 'Public Holiday') {
                            $('row:nth-child(' + x + ') c', sheet).attr('s', '19');
                        }
                        else if ($('c[r=G' + x + '] t', sheet).text() === 'TIMEOFF') {
                            $('row:nth-child(' + x + ') c', sheet).attr('s', '35');
                        }
                    });
                }

            }],
            columnDefs: [{ type: 'currency', targets: 5 }],
            "order": [[0, "asc"]],
            initComplete: function () {
                var btns = $('.dt-button');
                btns.addClass('btn  alert-primary d-none');
                btns.removeClass('dt-button');
                btns.text('Download Report')
            },
        });
        $("#download_report").click(function () {
            $("#ReportPayement").table2excel({
                exclude: ".d-none",
                name: "Worksheet Name",
                filename: "Report Allowance Intern",
                fileext: ".xlsx",
                preserveColors: true,
                exclude_img: true
            });
        });
        t.columns.adjust().draw();
        loadData(min_date);

        // function to load data
        function loadData(min_date) {
            //swal({
            //    title: "Loading...",
            //    text: "Please wait",
            //    icon: "/Content/images/icon/loading2.gif",
            //    button: false,
            //    showConfirmButton: false,
            //    allowOutsideClick: false
            //    //icon: "success"
            //});
            return $.ajax({
                url: "/Intern/ListReportPayment?periode=" + min_date,
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (data) {
                    //swal("Success", 'You have sucessfully...', "success");
                    var html = '';
                    var counter = 1;

                    // delete existing row if any
                    t.clear().draw();

                    $.each(data, function (key, item) {
                        html += '<tr class="itemRow text-black">';
                        html += '<td class="text-center">' + item.KPK + '</td>';
                        html += '<input type="hidden" class="KPKValue" name="KPKValue" value="' + item.KPK + '" />'
                        html += '<td>' + item.INTERNNAME + '</td>';
                        html += '<input type="hidden" class="NameValue" name="NameValue" value="' + item.INTERNNAME + '" />'
                        html += '<td>' + item.BUDGET + '</td>';
                        html += '<td class="hide">' + item.DEPT_NAME + '</td>';
                        html += '<td class="hide">' + item.SECT_NAME + '</td>';
                        html += '<td class="text-center">' + item.SALARY + '</td>';
                        html += '<td class="text-center">' + item.TAtn + '</td>';
                        html += '<td class="text-center">' + item.TAbs + '</td>';
                        html += '<td class="text-center">' + item.HalfWorkHour + '</td>';
                        html += '<td class="text-center d-none">' + item.Allowance + '</td>';
                        html += '</tr>';
                        counter++;
                    });

                    t.rows.add($(html)).draw();
                    t.columns.adjust().draw();
                },
                error: function (textStatus, status) {
                    console.log(textStatus);
                    console.log(status);
                }
            });
        }

        // send email to manager
        $(document).on("click", ".btnSendToManager", function (e) {
            $('#modalReportManager').modal({
                backdrop: false,
                keyboard: false
            });
            $('.modal-title').html('Approve Attendance');
