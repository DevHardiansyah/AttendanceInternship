@{
    ViewBag.Title = "ManagementPassword";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<!--begin::Toolbar-->
<div class="toolbar" id="kt_toolbar">
    <!--begin::Container-->
    <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
        <!--begin::Page title-->
        <div data-kt-swapper="true" data-kt-swapper-mode="prepend"
             data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}"
             class="page-title d-flex align-items-center flex-wrap me-3 mb-5 mb-lg-0">
            <!--begin::Title-->
            <h1 class="d-flex align-items-center text-dark fw-bolder fs-3 my-1">
                Dashboard
                <!--begin::Separator-->
                <span class="h-20px border-gray-200 border-start ms-3 mx-2"></span>
                <!--end::Separator-->
                <!--begin::Description-->
                <small class="text-muted fs-7 fw-bold my-1 ms-1">@ViewBag.title</small>
                <!--end::Description-->
            </h1>
            <!--end::Title-->
        </div>
        <!--end::Page title-->
    </div>
    <!--end::Container-->
</div>
<!--end::Toolbar-->
<!--begin::Post-->
<div class="post d-flex flex-column-fluid" id="kt_post">
    <!--begin::Container-->
    <div id="kt_content_container" class="container-xxl">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h6 class="card-title">
                            Password Management
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>TYPE KPK HERE.. AND HIT ENTER</label>
                            <input type="text" class="form-control form-control-lg" id="term_kpk">
                        </div>
                    </div>
                </div>

                <div class="card mt-2">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table text-center" id="table-user-reset-password">
                                <thead class="thead-light">
                                    <tr>
                                        <th width="30%">Action</th>
                                        <th>KPK</th>
                                        <th>Employee Name</th>
                                        <th>Current Role</th>

                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--end::Container-->
</div>
<!--end::Post-->
<script>
        $('#term_kpk').keypress(function (e) {

            if (e.which == 13) {
                $('#table-user-reset-password').DataTable().clear();
                $('#table-user-reset-password').DataTable().destroy();
                $.ajax({
                    url: '/SelfService/ShowAllData?kpk=' + $(this).val(),
                    type: 'GET',
                    dataType: 'JSON',
                    success: getListUser
                });
            }
        });
        function getListUser(response) {
            $('#table-user-reset-password').DataTable({
                data: response,
                paging: false,
                columns: [
                    {
                        "render": function (data, type, full, meta) {
                            return '<button class="btn btn-sm btn-primary" onclick="resetPassword(' + full.EMEMP + ')">Reset Password</button> ' +
                                '<input type="text" class="hide" name="employee_nameValue" value="' + full.EMNAME + '"><input type="text" class="hide" name="kpkValue" value="' + full.EMEMP +'">'+
                                ' <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#ChangeRole" onclick="return changeRole()">Change Role</button>';
                        }
                    },
                    {
                        data: 'user_id'
                    },
                    {
                        data: 'EMNAME'
                    },
                    {
                        data: "role_name"
                    }
                ],
            });
        }
        function resetPassword(kpk) {
            $.ajax({
                url: '/SelfService/updatePassword?kpk=' + $('#term_kpk').val(),
                type: 'GET',
                dataType: 'JSON',
                success: function (response) {
                    Swal.fire(
                        'Success!',
                        'Password has successfully updated!',
                        'success'
                    )

                }
            })
        }
        function changeRole() {
            var name = $('[name="employee_nameValue"]').val();
            $('[name="employee_name"]').val(name);

            var kpk = $('#term_kpk').val();
            $('[name="kpk"]').val(kpk);
        }
        function UpdateRole() {
            $('#ChangeRole').modal('hide');
            $.ajax({
                url: '/SelfService/ChangeRole?kpk=' + $('#kpk').val() + '&role_id=' + $('#role_id').val(),
                type: 'POST',
                dataType: 'JSON',
                success: function (response) {
                    Swal.fire(
                        'Success!',
                        'Role has successfully updated!',
                        'success'
                    )
                }
            })
        }
</script>
<!--Modal-->
<div class="modal fade" tabindex="-1" id="ChangeRole">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Change Role</h5>
                    <!--begin::Close-->
                    <div class="btn btn-icon btn-sm btn-active-icon-primary" data-kt-permissions-modal-action="close">
                        <!--begin::Svg Icon | path: icons/duotune/arrows/arr061.svg-->
                        <span class="svg-icon svg-icon-1">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                <rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="currentColor" />
                                <rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="currentColor" />
                            </svg>
                        </span>
                        <!--end::Svg Icon-->
                    </div>
                    <!--end::Close-->
                </div>

                <div class="modal-body">
                    <div class="fv-row mb-7">
                        <!--begin::Label-->
                        <label class="fs-6 fw-bold form-label mb-2">
                            <span class="required">Employee Name</span>
                        </label>
                        <!--end::Label-->
                        <!--begin::Input-->
                        <input class="hide" placeholder="Enter a permission name" name="kpk" id="kpk" required/>
                        <input class="form-control form-control-solid" placeholder="Enter a permission name" name="employee_name" id="employee_name" readonly/>
                        <!--end::Input-->
                    </div>
                    <div class="fv-row mb-7">
                        <!--begin::Label-->
                        <label class="fs-6 fw-bold form-label mb-2">
                            <span class="required">Role</span>
                        </label>
                        <!--end::Label-->
                        <!--begin::Input-->
                        <select class="form-select form-select-solid" data-control="select2" data-dropdown-parent="#ChangeRole" id="role_id" name="role_id" required>
                            <option value="">--Select Role--</option>
                            @foreach (var role in ViewBag.Role)
                            {
                                <option value="@role.role_id">@role.role_name</option>
                            }
                        </select>
                        <!--end::Input-->
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="return UpdateRole()">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

