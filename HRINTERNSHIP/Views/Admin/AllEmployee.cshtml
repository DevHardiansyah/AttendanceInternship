@model IEnumerable<HRINTERNSHIP.Models.All_employee>
@{ ViewBag.Title = "Master Eployee"; Layout = "~/Views/Shared/_dashboard.cshtml"; }

<div class="toolbar" id="kt_toolbar">
    <!--begin::Container-->
    <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
        <!--begin::Page title-->
        <div data-kt-swapper="true" data-kt-swapper-mode="prepend"
             data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}"
             class="page-title d-flex align-items-center flex-wrap me-3 mb-5 mb-lg-0">
            <!--begin::Title-->
            <h1 class="d-flex align-items-center text-dark fw-bolder fs-3 my-1">
                Dashboard
                <!--begin::Separator-->
                <span class="h-20px border-gray-200 border-start ms-3 mx-2"></span>
                <!--end::Separator-->
                <!--begin::Description-->
                <small class="text-muted fs-7 fw-bold my-1 ms-1">@ViewBag.title</small>
                <!--end::Description-->
            </h1>
            <!--end::Title-->
        </div>
        <!--end::Page title-->
    </div>
    <!--end::Container-->
</div>
<!--end::Toolbar-->
<!--begin::Post-->
<div class="post d-flex flex-column-fluid" id="kt_post">
    <!--begin::Container-->
    <div id="kt_content_container" class="container-xxl">
        <!--begin::Form-->
        <form action="#">
            <!--begin::Card-->
            <div class="card mb-7">
                <!--begin::Card body-->
                <div class="card-body">
                    <!--begin::Compact form-->
                    <div class="d-flex align-items-center">
                        <!--begin::Input group-->
                        <div class="position-relative w-md-400px me-md-2">
                            <!--begin::Svg Icon | path: icons/duotune/general/gen021.svg-->
                            <span class="svg-icon svg-icon-3 svg-icon-gray-500 position-absolute top-50 translate-middle ms-6">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                    <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor" />
                                    <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor" />
                                </svg>
                            </span>
                            <!--end::Svg Icon-->
                            <input type="number" id="kpk_master" value="" name="kpk" maxlength="6" oninput="javascript: if(this.value.length > this.max.length) this.value = this.value.slice(0, this.maxLength);" min="5" class="form-control form-control-solid ps-10" placeholder="Type KPK" />
                        </div>
                        <!--end::Input group-->
                        <!--begin:Action-->
                        <div class="d-flex align-items-center">
                            <button type="submit" class="btn btn-primary me-5">Search</button>
                            <a id="kt_horizontal_search_advanced_link" class="btn btn-link" data-bs-toggle="collapse" href="#kt_advanced_search_form">Advanced Search</a>
                        </div>
                        <!--end:Action-->
                    </div>
                    <!--end::Compact form-->
                    <!--begin::Advance form-->
                    <div class="collapse" id="kt_advanced_search_form">
                        <!--begin::Separator-->
                        <div class="separator separator-dashed mt-9 mb-6"></div>
                        <!--end::Separator-->
                        <!--begin::Row-->
                        <div class="row g-8 mb-8">
                            <!--begin::Col-->
                            <div class="col-xxl-6">
                                <label class="fs-6 form-label fw-bolder text-dark">Department</label>
                                @Html.DropDownList("Departement_code", null, htmlAttributes: new
                                   {
                                   @class = "form-select form-select-solid",
                                   id = "departement_master"
                                   })
                            </div>
                            <div class="col-lg-6">
                                <label class="fs-6 form-label fw-bolder text-dark">Section</label>
                                <!--begin::Select-->
                                @Html.DropDownList("section_code", null, htmlAttributes: new
                                {
                                @class = "form-select form-select-solid",
                                id = "section_code"
                                })
                                <!--end::Select-->
                            </div>
                            <!--end::Col-->
                            <!--begin::Col-->
                            <div class="col-xxl-12">
                                <!--begin::Row-->
                                <div class="row g-12">
                                    <!--begin::Col-->
                                    <div class="col-lg-5">
                                        <label class="fs-6 form-label fw-bolder text-dark">PTMI</label>
                                        <!--begin::Select-->
                                        <select class="form-select form-select-solid" id="company_id" data-control="select2" data-placeholder="PTMI" data-hide-search="true">
                                            <option value="">All</option>
                                            <option value="PTMW">PTMW</option>
                                            <option value="PTME">PTME</option>
                                        </select>
                                        <!--end::Select-->
                                    </div>
                                    <!--end::Col-->
                                    <!--begin::Col-->
                                    <div class="col-lg-5">
                                        <label class="fs-6 form-label fw-bolder text-dark">Type Employee</label>
                                        <select class="form-select form-select-solid" id="typeofemployee" name="typeofemployee">
                                            <option value="all">All</option>
                                            <option value="m">Staff</option>
                                            <option value="d">Non-Staff</option>
                                        </select>
                                    </div>
                                    <!--end::Col-->
                                    <div class="col-lg-2">
                                        <label class="fs-6 form-label fw-bolder text-dark">Status</label>
                                        <div class="form-check form-switch form-check-custom form-check-solid mt-1">
                                            <input class="form-check-input" type="checkbox" value="" id="flexSwitchChecked" checked="checked" />
                                            <label class="form-check-label" for="flexSwitchChecked">Active</label>
                                        </div>
                                    </div>
                                </div>
                                <!--end::Row-->
                            </div>
                            <!--end::Col-->
                        </div>
                        <!--end::Row-->
                    </div>
                    <!--end::Advance form-->
                </div>
                <!--end::Card body-->
            </div>
            <!--end::Card-->
        </form>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        @if (ViewBag.Message == "upload-data-success")
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <strong>Success!</strong> Updated Data.
                                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="alert" aria-label="Close">
                                    <span class="svg-icon svg-icon-2x">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                            <path opacity="0.3" d="M6.7 19.4L5.3 18C4.9 17.6 4.9 17 5.3 16.6L16.6 5.3C17 4.9 17.6 4.9 18 5.3L19.4 6.7C19.8 7.1 19.8 7.7 19.4 8.1L8.1 19.4C7.8 19.8 7.1 19.8 6.7 19.4Z" fill="currentColor" />
                                            <path d="M19.5 18L18.1 19.4C17.7 19.8 17.1 19.8 16.7 19.4L5.40001 8.1C5.00001 7.7 5.00001 7.1 5.40001 6.7L6.80001 5.3C7.20001 4.9 7.80001 4.9 8.20001 5.3L19.5 16.6C19.9 16.9 19.9 17.6 19.5 18Z" fill="currentColor" />
                                        </svg>
                                    </span>
                                </div>

                            </div>
                        }
                        <div class="card-title">
                            Table  Master Employee
                        </div>
                        <button type="button" class="btn btn-primary  btn-icon-text"  data-bs-toggle="modal" data-bs-target=".bd-example-modal-lg">
                            <i class="las la-cloud-upload-alt me-2 fs-2"></i>Upload Data
                        </button>
                        <button class="btn btn-primary  btn-icon-text" type="button" id="master_employee">
                            <i class="las la-cloud-download-alt me-2 fs-2"></i>Export to excel
                        </button>                      

                        <div class="collapse" id="collapseExample1">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="input-group date datepicker dashboard-date mr-2 mb-2 mb-md-0 d-md-none d-xl-flex" id="dashboardDate">
                                            <span class="input-group-addon bg-transparent"><i data-feather="terminal" class=" text-primary"></i></span>
                                            <input type="hidden" id="term_start" value="" name="term_start">
                                            <input type="hidden" id="term_end" value="" name="term_end">

                                        </div>

                                        <div class="input-group date datepicker dashboard-date mr-2 mb-2 mb-md-0 d-md-none d-xl-flex" id="dashboardDate">
                                            <span class="input-group-addon bg-transparent"><i data-feather="users" class=" text-primary"></i></span>
                                        </div>
                                        <div class="input-group date datepicker dashboard-date mr-2 mb-2 mb-md-0 d-md-none d-xl-flex" id="dashboardDate">
                                            <span class="input-group-addon bg-transparent"><i data-feather="list" class=" text-primary"></i></span>
                                        </div>
                                        <div class="input-group date datepicker dashboard-date mr-2 mb-2 mb-md-0 d-md-none d-xl-flex" id="dashboardDate">
                                            <span class="input-group-addon bg-transparent"><i data-feather="menu" class=" text-primary"></i></span>
                                            <select name="company_id" id="company_id" class="form-controll-sm">
                                                <option value="PTME">PTME</option>
                                                <option value="PTMW">PTMW</option>
                                                <option value="all">ALL</option>
                                            </select>
                                        </div>
                                        <div class="input-group date datepicker dashboard-date mr-2 mb-2 mb-md-0 d-md-none d-xl-flex" id="dashboardDate">
                                            <span class="input-group-addon bg-transparent"><i data-feather="menu" class=" text-primary"></i></span>
                                            <select name="typeofemployee" id="typeofemployee" class="form-controll-sm">
                                                <option value="m">Staff</option>
                                                <option value="d">Non-Staff</option>
                                                <option value="all">ALL</option>
                                            </select>
                                        </div>
                                        <div class="input-group date datepicker dashboard-date mr-2 mb-2 mb-md-0 d-md-none d-xl-flex" id="dashboardDate">
                                            <span class="input-group-addon bg-transparent"><i data-feather="menu" class=" text-primary"></i></span>
                                            <select name="status_employee" id="status_employee" class="form-controll-sm">
                                                <option value="active">Active</option>
                                                <option value="non-active">Non-Active</option>
                                                <option value="all">ALL</option>
                                            </select>
                                        </div>
                                        <button type="button" class="btn btn-primary btn-icon-text float-left">
                                            <i class="btn-icon-prepend" data-feather="arrow-right-circle"></i>
                                            Show
                                        </button>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
                            <div class="d-flex align-items-center flex-wrap text-nowrap">
                                <!-- Modal for show form upload file -->
                                <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                                    <div class="modal-dialog ">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Upload data Mst Employee <br><span class="text-muted">.Excel Only</span></h5>
                                                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                                                    <span class="svg-icon svg-icon-2x">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                                            <path opacity="0.3" d="M6.7 19.4L5.3 18C4.9 17.6 4.9 17 5.3 16.6L16.6 5.3C17 4.9 17.6 4.9 18 5.3L19.4 6.7C19.8 7.1 19.8 7.7 19.4 8.1L8.1 19.4C7.8 19.8 7.1 19.8 6.7 19.4Z" fill="currentColor" />
                                                            <path d="M19.5 18L18.1 19.4C17.7 19.8 17.1 19.8 16.7 19.4L5.40001 8.1C5.00001 7.7 5.00001 7.1 5.40001 6.7L6.80001 5.3C7.20001 4.9 7.80001 4.9 8.20001 5.3L19.5 16.6C19.9 16.9 19.9 17.6 19.5 18Z" fill="currentColor" />
                                                        </svg>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="modal-body">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        @using (Html.BeginForm("UploadMasterEmployeeSheet", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "form-2" }))
                                                        {
                                                            <div class="form-group">
                                                                <label for="">Master Employee <strong>Non-Staff</strong></label>
                                                                <br />
                                                                <input type="file" id="postedFile1" name="postedFile" class="form-control">
                                                                <br>
                                                                <button class="file-upload-browse attendance_absent btn btn-primary" type="submit">Upload</button>
                                                            </div>
                                                        }
                                                    </div>
                                                    <div class="col-md-6">
                                                        @using (Html.BeginForm("UploadMasterStaffEmployeeSheet", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "form-3" }))
                                                        {
                                                            <div class="form-group">
                                                                <label for="">Master Employee <strong>staff</strong></label>
                                                                <br />
                                                                <input type="file" id="MasterStaffEmployee1" name="MasterStaffEmployee" class="form-control">
                                                                <br>
                                                                <button class="file-upload-browse attendance_absent btn btn-primary" type="submit">Upload</button>
                                                            </div>
                                                        }
                                                    </div>
                                                    <div class="col-md-6 mt-5">
                                                        @using (Html.BeginForm("UploadMasterResignEmployeeSheet", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "form-3" }))
                                                        {
                                                            <div class="form-group">
                                                                <label for="">Master Employee <strong>Resign</strong></label>
                                                                <br>
                                                                <input type="file" id="MasterResign1" name="MasterResign" class="form-control">
                                                                <br>
                                                                <button class="file-upload-browse attendance_absent btn btn-primary" type="submit">Upload</button>
                                                            </div>
                                                        }
                                                    </div>


                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive  pt-b">
                            <table class="table table-bordered" id="all-employee">
                                <thead class="">
                                    <tr>
                                        @*<th class="hide" rowspan="2">#</th>*@
                                        <th class="text-center" rowspan="2">Plant</th>
                                        <th class="text-center" rowspan="2">KPK</th>
                                        <th class="text-center" rowspan="2">Employee Name</th>
                                        <th class="text-center" rowspan="2">Gender</th>
                                        <th class="text-center" rowspan="2">Employee Join Date</th>
                                        <th class="text-center" rowspan="2">end contract</th>
                                        <th class="text-center" rowspan="2">old contract</th>
                                        <th class="text-center" rowspan="2">EMJOBA</th>
                                        <th class="text-center" colspan="2">Departement</th>
                                        <th class="text-center" colspan="2">Section</th>
                                        <th class="text-center" colspan="2">Job</th>
                                        <th class="text-center" colspan="2">Supervisor</th>
                                        <th class="text-center" rowspan="2">Grade</th>
                                    </tr>
                                    <tr>
                                        <th class="text-center">
                                            Code
                                        </th>
                                        <th class="text-center">
                                            Name
                                        </th>
                                        <th class="text-center">
                                            Code
                                        </th>
                                        <th class="text-center">
                                            Name
                                        </th>
                                        <th class="text-center">
                                            Code
                                        </th>
                                        <th class="text-center">
                                            Name
                                        </th>
                                        <th class="text-center">
                                            kpk
                                        </th>
                                        <th class="text-center">
                                            Name
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!--end::Container-->
</div>
<!--end::Post-->
