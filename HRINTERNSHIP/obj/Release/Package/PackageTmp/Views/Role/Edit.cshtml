@model IEnumerable<HRINTERNSHIP.Models.ListUser>
@{
	ViewBag.Title = "Edit";
	Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="row">
	<div class="col-lg-8">
		<div class="card ">

			<div class="card-body">
				@foreach (var data in Model)
				{
					<div class="card-description">
						Update role @data.EMNAME <strong>
							<p class="lead">(@data.role_name)</p>
						</strong>
					</div>
					<hr>
					<form action="" method="post">

						<div class="form-group row">
							<label for="inputEmail3" class="col-sm-2 form-control-label">KPK</label>
							<div class="col-sm-10">
								<input type="" class="form-control" disabled="" id="" name="EMEMP" value="@data.EMEMP">
							</div>
						</div>
						<div class="form-group row">
							<label for="inputPassword3" class="col-sm-2 form-control-label">Employee Name</label>
							<div class="col-sm-10">
								<input type="" class="form-control" disabled="" id="inputPassword3" value="@data.EMNAME">
							</div>
						</div>


						<div class="form-group row">
							<label class="col-sm-2">Role</label>
							<div class="col-sm-10">
								<select class="c-select" required name="role_id">

									<option selected disabled>Open this select menu</option>
									@foreach (var item in ViewBag.ListRole)
									{
										<option value="@item.role_id">@item.role_name</option>
									}


								</select>
							</div>
						</div>

						<div class="form-group row">
							<div class="col-sm-6">
								<button type="submit" class="btn btn-secondary">Update</button>
							</div>
						</div>
					</form>
				}
			</div>
		</div>
	</div>
</div>
