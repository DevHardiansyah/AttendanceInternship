<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="~/Content/Images/Mattel_logo.png">
    <title>@ViewBag.Title</title>
    <link href="~/Content/mycss/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script type="text/javascript">
        function printChecked() {
            const heading = document.querySelector('table > thead > tr');
            const items = document.querySelectorAll('table > tbody > tr');
            let selectedRows = 0;

            for (let i = 0; i < items.length; i++) {
                const tr = items[i];
                const input = tr.querySelector('input[type=checkbox]')
                const isChecked = input.checked

                if (isChecked) {
                    selectedRows += 1;
                    heading.classList.remove('no-print');
                    tr.classList.remove('no-print');
                } else {
                    tr.classList.add('no-print');
                }

                if (!selectedRows) {
                    heading.classList.add('no-print');
                }
            }
            window.print();
        }
        function selectAll() {
            $(':checkbox').each(function () {
                this.checked = true;
            });
        }
        function resetAll() {
            $(':checkbox').each(function () {
                this.checked = false;
            });
        }
    </script>
    <style>
        body {
